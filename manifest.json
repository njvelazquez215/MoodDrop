{
  "manifest_version": 3,
  "name": "MoodDrop - Registro de emociones",
  "version": "1.0",
  "description": "Registrá tus emociones durante el día y visualizá tu estado de ánimo.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": ["storage"],
  "web_accessible_resources": [
    {
      "resources": ["lib/chart.min.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
